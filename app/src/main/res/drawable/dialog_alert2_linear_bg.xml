<?xml version="1.0" encoding="utf-8"?>
<!--自定义alertDialog 的线性布局的背景,新版电表-->
<shape
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <solid android:color="@android:color/white"/>
    <corners
        android:bottomLeftRadius="@dimen/dialog_corner_size"
        android:bottomRightRadius="@dimen/dialog_corner_size"/>
    <padding
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp"/>
    <stroke
        android:width="0.5dp"
        android:color="@color/prompt_text_color"/>
</shape>