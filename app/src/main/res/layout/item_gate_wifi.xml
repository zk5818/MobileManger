<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llItem_gate"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:addStatesFromChildren="true"
    android:background="@drawable/shape_round_7_white"
    android:elevation="1dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/sale_name"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="10dp"
        android:contentDescription="出售信息："
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:lines="1"
        android:text="出售信息："
        android:textSize="15sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@color/c_E0E5E9" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:gravity="center_vertical"
            android:text="盈利："
            android:textSize="15sp" />

        <TextView
            android:id="@+id/inCome"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="0.65"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:text="212"
            android:textColor="@color/color_31c27c"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/out_date"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_below="@+id/xiaoqu_name"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="出售日期：2017-12-12"
            android:textSize="13sp" />

    </LinearLayout>

</LinearLayout>