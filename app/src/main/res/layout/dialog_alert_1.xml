<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:id="@+id/alert1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@null"
                                    app:cardBackgroundColor="@android:color/white"
                                    app:cardCornerRadius="@dimen/dialog_corner_size"
                                    app:cardUseCompatPadding="true"
                                    app:contentPadding="@dimen/padding_right"
                                    app:contentPaddingBottom="5dp">

    <android.support.v7.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:columnCount="2"
        app:rowCount="3">

        <TextView
            android:id="@+id/title"
            android:layout_height="wrap_content"
            android:paddingBottom="12dp"
            android:gravity="center_horizontal"
            android:text="标题"
            android:textColor="@color/textcolor_3_black_2"
            android:textSize="@dimen/textsize_2"
            app:layout_columnSpan="2"
            app:layout_gravity="fill_horizontal"
            />

        <TextView
            android:id="@+id/message"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:lineSpacingMultiplier="1.2"
            android:padding="9dp"
            android:text="内容"
            app:layout_columnSpan="2"
            app:layout_gravity="fill_horizontal"
            />

        <TextView
            android:id="@+id/cancel"
            android:layout_height="40.5dp"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/textcolor_titlebar_right"
            app:layout_columnWeight="1"
            />

        <TextView
            android:id="@+id/ok"
            android:layout_height="40.5dp"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/textcolor_titlebar_right"
            app:layout_columnWeight="1"
            />
    </android.support.v7.widget.GridLayout>

</android.support.v7.widget.CardView>